# ===================================
# BookStore Application - Environment Configuration
# ===================================

# MongoDB Configuration
MONGO_ROOT_USERNAME=root
MONGO_ROOT_PASSWORD=change_this_password_in_production
MONGO_DB=BookStore

# PostgreSQL Configuration (for ABP Framework tables)
POSTGRES_DB=BookStore
POSTGRES_USER=root
POSTGRES_PASSWORD=change_this_password_in_production

# API Configuration
API_SELF_URL=https://your-api-domain.choreo.dev
API_CORS_ORIGINS=https://your-blazor-domain.choreo.dev
API_REDIRECT_URLS=https://your-blazor-domain.choreo.dev

# Auth Server Configuration
AUTH_SERVER_AUTHORITY=https://your-api-domain.choreo.dev
AUTH_SERVER_REQUIRE_HTTPS=true

# Certificate Configuration
# Generate a strong password for production:
# Use: openssl rand -base64 32
CERT_PASSWORD=2D7AA457-5D33-48D6-936F-C48E5EF468ED

# String Encryption Configuration
# Generate a strong passphrase for production:
# Use: openssl rand -base64 24
STRING_ENCRYPTION_PASSPHRASE=IDoxesczPdZXPoIk

# Blazor Configuration
BLAZOR_SELF_URL=https://your-blazor-domain.choreo.dev
BLAZOR_AUTH_SERVER_AUTHORITY=https://your-api-domain.choreo.dev
BLAZOR_REMOTE_SERVICE_BASE_URL=https://your-api-domain.choreo.dev

# ===================================
# Local Development Overrides
# ===================================
# For local testing, uncomment these:
# API_SELF_URL=http://localhost:8080
# API_CORS_ORIGINS=http://localhost:3000
# API_REDIRECT_URLS=http://localhost:3000
# AUTH_SERVER_AUTHORITY=http://localhost:8080
# AUTH_SERVER_REQUIRE_HTTPS=false
# BLAZOR_SELF_URL=http://localhost:3000
# BLAZOR_AUTH_SERVER_AUTHORITY=http://localhost:8080
# BLAZOR_REMOTE_SERVICE_BASE_URL=http://localhost:8080
